{
  "name": "pizza-planet-backend",
  "type": "module",
  "version": "0.1.0",
  "main": "server.js",
  "scripts": {
    "dev": "node backend/server.js",
    "start": "node backend/server.js",
    "seed": "node backend/scripts/seed.js",
    "build": "npx vite build --config frontend/vite.config.js && node -e \"require('fs').copyFileSync('frontend/dist/index.html','frontend/dist/404.html'); require('fs').writeFileSync('frontend/dist/.nojekyll','')\"",
    "test": "cross-env NODE_ENV=test vitest --config vitest.config.backend.js run",
    "test:watch": "cross-env NODE_ENV=test vitest --config vitest.config.backend.js",
    "coverage": "cross-env NODE_ENV=test vitest --config vitest.config.backend.js run --coverage"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.5.0",
    "nodemailer": "^7.0.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "jsdom": "^26.1.0",
    "mongodb-memory-server": "^10.2.0",
    "supertest": "^7.1.4",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
